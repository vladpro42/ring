{
  "compilerOptions": {
    "types": [
      "babel__generator"
    ],
    "typeRoots": [
      "node_modules/@types",
      "./src"
    ],
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "esnext",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    "noImplicitAny": false,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*", "global.d.ts"],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}